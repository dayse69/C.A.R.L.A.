{
    "compilerOptions": {
        "target": "ES2021",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "build",
        "rootDir": "src",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": "src",
        "paths": {
            "#base": ["discord/base/index"],
            "#base/*": ["discord/base/*"],
            "#utils": ["utils/index"],
            "#utils/*": ["utils/*"],
            "#services": ["services/index"],
            "#services/*": ["services/*"],
            "#database": ["database/index"],
            "#database/*": ["database/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "build"]
}
